<Page
    x:Class="Anime_quiz_UWP.Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Anime_quiz_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <RelativePanel Background="#263238">
            <TextBlock x:ConnectionId='1' x:Name="TitleText" Text="Anime Quiz" RelativePanel.AlignHorizontalCenterWithPanel="True"
                   FontSize="54" Margin="10,10,10,30" Foreground="#c0392b"  />
            
            <Button x:ConnectionId='2' x:Name="PlayButton" Content="Play" RelativePanel.AlignHorizontalCenterWithPanel="True"
                RelativePanel.Below="TitleText" Margin="200,200,200,15"  
                FontSize="24" Width="150" RequestedTheme="Dark"                          />

            <Button x:ConnectionId='3' x:Name="CreditButton" Content="Credit" RelativePanel.AlignHorizontalCenterWithPanel="True"
                RelativePanel.Below="PlayButton" Margin="15"  
                FontSize="24" Width="150" RequestedTheme="Dark" />
        </RelativePanel>

    </Grid>
</Page>

